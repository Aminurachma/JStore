<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/gray5">

	<androidx.core.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_above="@+id/bottom_layout">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<androidx.appcompat.widget.AppCompatImageView
				android:id="@+id/img_product"
				android:layout_width="match_parent"
				android:layout_height="@dimen/_250sdp"
				android:background="@color/white"
				android:scaleType="centerCrop"
				app:srcCompat="@drawable/jam" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<com.google.android.material.card.MaterialCardView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:cardBackgroundColor="@color/light"
					app:cardCornerRadius="0dp">

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="@dimen/_12sdp"
						android:orientation="vertical">

						<TextView
							android:id="@+id/tv_product_name"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:ellipsize="end"
							android:fontFamily="@font/rubik_medium"
							android:maxLines="2"
							android:textColor="@color/dark"
							android:textSize="@dimen/_16ssp"
							tools:text="Jam Tangan Mewah Biru Kuning" />

						<TextView
							android:id="@+id/tv_product_price"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="@dimen/_8sdp"
							android:fontFamily="@font/rubik_regular"
							android:textColor="@color/gray3"
							android:textSize="@dimen/_14ssp"
							tools:text="Rp. 120.000" />

					</LinearLayout>

				</com.google.android.material.card.MaterialCardView>

				<com.google.android.material.card.MaterialCardView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/_8sdp"
					app:cardBackgroundColor="@color/light"
					app:cardCornerRadius="0dp">

					<androidx.constraintlayout.widget.ConstraintLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical"
						android:paddingVertical="@dimen/_12sdp">

						<TextView
							android:id="@+id/tv_detail_product"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_marginHorizontal="@dimen/_12sdp"
							android:fontFamily="@font/rubik_medium"
							android:text="@string/rincian_produk"
							android:textColor="@color/dark"
							android:textSize="@dimen/_12ssp"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toTopOf="parent" />

						<include
							android:id="@+id/include"
							layout="@layout/divider_layout"
							android:layout_width="0dp"
							android:layout_height="1dp"
							android:layout_marginTop="@dimen/_12sdp"
							app:layout_constraintTop_toBottomOf="@id/tv_detail_product" />

						<TextView
							android:id="@+id/tv_stock_label"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="@dimen/_12sdp"
							android:fontFamily="@font/rubik_light"
							android:text="@string/stok"
							android:textColor="@color/gray3"
							android:textSize="@dimen/_12ssp"
							app:layout_constraintStart_toStartOf="@+id/tv_detail_product"
							app:layout_constraintTop_toBottomOf="@+id/include" />

						<TextView
							android:id="@+id/tv_stock"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_marginStart="@dimen/_80sdp"
							android:fontFamily="@font/rubik_medium"
							android:textColor="@color/dark"
							android:textSize="@dimen/_12ssp"
							app:layout_constraintBottom_toBottomOf="@+id/tv_stock_label"
							app:layout_constraintEnd_toEndOf="@+id/tv_detail_product"
							app:layout_constraintStart_toEndOf="@+id/tv_stock_label"
							app:layout_constraintTop_toTopOf="@+id/tv_stock_label"
							tools:text="152" />

						<TextView
							android:id="@+id/tv_shipment_from_label"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:fontFamily="@font/rubik_light"
							android:text="@string/dikirim_dari"
							android:textColor="@color/gray3"
							android:textSize="@dimen/_12ssp"
							app:layout_constraintBottom_toBottomOf="@+id/tv_shipment_from"
							app:layout_constraintStart_toStartOf="@+id/tv_detail_product"
							app:layout_constraintTop_toTopOf="@+id/tv_shipment_from" />

						<TextView
							android:id="@+id/tv_shipment_from"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_marginTop="@dimen/_12sdp"
							android:fontFamily="@font/rubik_medium"
							android:textColor="@color/dark"
							android:textSize="@dimen/_12ssp"
							app:layout_constraintEnd_toEndOf="@+id/tv_stock"
							app:layout_constraintStart_toStartOf="@+id/tv_stock"
							app:layout_constraintTop_toBottomOf="@+id/tv_stock"
							tools:text="KOTA MEDAN - MEDAN SUNGGAL, SUMATERA UTARA, ID" />

						<include
							android:id="@+id/include2"
							layout="@layout/divider_layout"
							android:layout_width="0dp"
							android:layout_height="1dp"
							android:layout_marginTop="@dimen/_12sdp"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toBottomOf="@+id/tv_shipment_from" />

						<TextView
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_marginTop="@dimen/_12sdp"
							app:layout_constraintEnd_toEndOf="@+id/tv_detail_product"
							app:layout_constraintStart_toStartOf="@+id/tv_detail_product"
							app:layout_constraintTop_toBottomOf="@+id/include2"
							tools:text="@tools:sample/lorem/random" />

					</androidx.constraintlayout.widget.ConstraintLayout>

				</com.google.android.material.card.MaterialCardView>

			</LinearLayout>

		</LinearLayout>

	</androidx.core.widget.NestedScrollView>

	<LinearLayout
		android:id="@+id/bottom_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:background="@color/white"
		android:orientation="horizontal"
		android:padding="@dimen/_12sdp">

		<com.google.android.material.card.MaterialCardView
			android:layout_width="0dp"
			android:layout_height="@dimen/_32sdp"
			android:layout_weight="1"
			app:cardElevation="0dp"
			android:layout_marginEnd="@dimen/_4sdp"
			app:cardBackgroundColor="@color/gray5"
			app:cardCornerRadius="@dimen/_6sdp">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="horizontal">

				<com.google.android.material.button.MaterialButton
					android:id="@+id/btn_decrement"
					style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:insetTop="0dp"
					android:backgroundTint="@color/gray5"
					android:text="@string/minus"
					app:cornerRadius="0dp"
					android:textColor="@color/dark"
					android:textSize="@dimen/_12ssp"
					android:fontFamily="@font/rubik_bold"
					android:insetBottom="0dp"
					android:layout_weight="1"/>

				<TextView
					android:id="@+id/tv_quantity"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:gravity="center"
					android:textSize="@dimen/_10ssp"
					android:textColor="@color/dark"
					android:background="@color/white"
					android:fontFamily="@font/rubik_medium"
					android:layout_height="match_parent"
					tools:text="1"/>

				<com.google.android.material.button.MaterialButton
					android:id="@+id/btn_increment"
					android:layout_width="0dp"
					style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
					android:layout_height="match_parent"
					android:insetTop="0dp"
					android:backgroundTint="@color/gray5"
					android:text="@string/plus"
					app:cornerRadius="0dp"
					android:textColor="@color/dark"
					android:textSize="@dimen/_12ssp"
					android:fontFamily="@font/rubik_bold"
					android:insetBottom="0dp"
					android:layout_weight="1"/>

			</LinearLayout>

		</com.google.android.material.card.MaterialCardView>

		<com.google.android.material.button.MaterialButton
			android:id="@+id/btn_add_to_cart"
			style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
			android:layout_width="0dp"
			android:layout_height="@dimen/_32sdp"
			android:layout_marginStart="@dimen/_4sdp"
			android:layout_weight="2"
			android:fontFamily="@font/rubik_medium"
			android:insetTop="0dp"
			android:insetBottom="0dp"
			android:text="@string/add_to_cart"
			android:textAllCaps="false"
			android:textColor="@color/white"
			app:iconTint="@color/white"
			android:textSize="@dimen/_12ssp"
			app:cornerRadius="@dimen/_6sdp"
			app:icon="@drawable/ic_shopping_cart"
			app:iconGravity="textStart" />

	</LinearLayout>

</RelativeLayout>