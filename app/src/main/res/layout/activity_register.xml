<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".RegisterActivity">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/light"
		android:orientation="vertical"
		android:padding="@dimen/_20sdp">

		<androidx.appcompat.widget.AppCompatTextView
			android:id="@+id/register"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="@dimen/_20sdp"
			android:fontFamily="@font/rubik_medium"
			android:text="@string/register_here"
			android:textColor="@color/dark"
			android:textSize="@dimen/_24ssp" />

		<androidx.appcompat.widget.AppCompatTextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
			android:layout_gravity="center_horizontal"
			android:fontFamily="@font/rubik_light"
			android:text="@string/create_your_new_account"
			android:textColor="@color/gray2"
			android:textSize="@dimen/_12ssp" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/_32sdp"
			android:fontFamily="@font/rubik_regular"
			android:text="@string/fullname"
			android:textColor="@color/dark"
			android:textSize="@dimen/_12ssp" />

		<com.google.android.material.textfield.TextInputLayout
			android:id="@+id/til_name"
			style="@style/App.TextInputLayout.OutlinedBox"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/_4sdp"
			android:elevation="@dimen/_2sdp">

			<com.google.android.material.textfield.TextInputEditText
				android:id="@+id/edt_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:fontFamily="@font/rubik_light"
				android:hint="@string/enter_your_name_here"
				android:inputType="textCapWords"
				android:textColor="@color/dark"
				android:textColorHint="@color/gray3"
				android:textSize="@dimen/_12ssp"
				tools:text="Aminurachma" />

		</com.google.android.material.textfield.TextInputLayout>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/_8sdp"
			android:fontFamily="@font/rubik_regular"
			android:text="@string/address"
			android:textColor="@color/dark"
			android:textSize="@dimen/_12ssp" />

		<com.google.android.material.textfield.TextInputLayout
			android:id="@+id/til_address"
			style="@style/App.TextInputLayout.OutlinedBox"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/_4sdp"
			android:elevation="@dimen/_2sdp">

			<com.google.android.material.textfield.TextInputEditText
				android:id="@+id/edt_address"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:fontFamily="@font/rubik_light"
				android:gravity="top"
				android:hint="@string/enter_your_address_here"
				android:inputType="textMultiLine"
				android:minHeight="@dimen/_44sdp"
				android:textColor="@color/dark"
				android:textColorHint="@color/gray3"
				android:textSize="@dimen/_12ssp" />

		</com.google.android.material.textfield.TextInputLayout>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/_8sdp"
			android:fontFamily="@font/rubik_regular"
			android:text="@string/phone_number"
			android:textColor="@color/dark"
			android:textSize="@dimen/_12ssp" />

		<com.google.android.material.textfield.TextInputLayout
			android:id="@+id/til_phone_number"
			style="@style/App.TextInputLayout.OutlinedBox"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/_4sdp"
			android:elevation="@dimen/_2sdp">

			<com.google.android.material.textfield.TextInputEditText
				android:id="@+id/edt_phone_number"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:fontFamily="@font/rubik_light"
				android:hint="@string/enter_your_phone_number_here"
				android:inputType="phone"
				android:textColor="@color/dark"
				android:textColorHint="@color/gray3"
				android:textSize="@dimen/_12ssp" />

		</com.google.android.material.textfield.TextInputLayout>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/_8sdp"
			android:fontFamily="@font/rubik_regular"
			android:text="@string/email"
			android:textColor="@color/dark"
			android:textSize="@dimen/_12ssp" />

		<com.google.android.material.textfield.TextInputLayout
			android:id="@+id/til_email"
			style="@style/App.TextInputLayout.OutlinedBox"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/_4sdp"
			android:elevation="@dimen/_2sdp">

			<com.google.android.material.textfield.TextInputEditText
				android:id="@+id/edt_email"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:fontFamily="@font/rubik_light"
				android:hint="@string/enter_your_email_here"
				android:inputType="textEmailAddress"
				android:textColor="@color/dark"
				android:textColorHint="@color/gray3"
				android:textSize="@dimen/_12ssp" />

		</com.google.android.material.textfield.TextInputLayout>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/_8sdp"
			android:fontFamily="@font/rubik_regular"
			android:text="@string/password"
			android:textColor="@color/dark"
			android:textSize="@dimen/_12ssp" />

		<com.google.android.material.textfield.TextInputLayout
			android:id="@+id/til_password"
			style="@style/App.TextInputLayout.OutlinedBox"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/_4sdp"
			android:elevation="@dimen/_2sdp"
			app:passwordToggleEnabled="true"
			app:passwordToggleTint="@color/gray4">

			<com.google.android.material.textfield.TextInputEditText
				android:id="@+id/edt_password"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:fontFamily="@font/rubik_light"
				android:hint="@string/enter_your_password_here"
				android:inputType="textEmailAddress"
				android:textColor="@color/dark"
				android:textColorHint="@color/gray3"
				android:textSize="@dimen/_12ssp" />

		</com.google.android.material.textfield.TextInputLayout>

		<com.google.android.material.button.MaterialButton
			android:id="@+id/btn_register"
			style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
			android:layout_width="match_parent"
			android:layout_height="@dimen/_45sdp"
			android:layout_marginTop="@dimen/_12sdp"
			android:fontFamily="@font/poppins_bold"
			android:text="@string/register"
			android:textAllCaps="false"
			android:textColor="@color/white"
			android:textSize="@dimen/_14ssp"
			app:cornerRadius="@dimen/_8sdp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:fontFamily="@font/rubik_light"
            android:textSize="@dimen/_10ssp"
            app:cornerRadius="@dimen/_8sdp"
            android:textColor="@color/dark"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:text="@string/do_you_have_an_account_login_here"/>

	</LinearLayout>

</ScrollView>